<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProximityActivity"
    android:background="@drawable/grey_back1">

    <TextView
        android:id="@+id/proximityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approchez le téléphone pour activer le capteur de proximité"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/proximityStatus"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_above="@id/imageView"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/noproximity" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/accueil"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
