<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProximityActivity"
    android:background="@drawable/grey_back1">

    <TextView
        android:id="@+id/proximityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approchez le téléphone pour activiter le capteur de proximité"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/proximityStatus"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_above="@id/imageView"
        android:layout_centerInParent="true"
        android:textSize="25dp"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/noproximity" />

</RelativeLayout>
