<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="@drawable/grey_back1">

    <Button
        android:id="@+id/btnGoToFirstActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Liste de capteurs"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnGoToSecondActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:text="Accéléromètre" />

    <Button
        android:id="@+id/btnGoToThirdActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Direction"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnGoToFlashActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Secouer un appareil"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnGoToProximityActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Proximité"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"/>

    <Button
        android:id="@+id/btnGoToLocationActivity"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Géolocalisation"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"/>

</LinearLayout>
